package com.yoon.emotions.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller
public class adminController {
	/**
	 * 회원관리 화면으로 이동
	 * @return
	 */
	@RequestMapping(value = "userManagement.do")
	public String userManagement() {
		
		return "/admin/userManagement";		
	}
	
	/**
	 * 정지회원관리 화면으로 이동
	 * @return
	 */
	@RequestMapping(value = "suspendedManagement.do")
	public String suspendedManagement() {
		
		return "/admin/userManagement";		
	}
	
	/**
	 * 그룹관리 화면으로 이동
	 * @return
	 */
	@RequestMapping(value = "groupManagement.do")
	public String groupManagement() {
		
		return "/admin/userManagement";		
	}
	
	
}